    <div class="app-content content">
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <section class="flexbox-container">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="col-md-4 col-10 box-shadow-2 p-0">
                            <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                                <div class="card-header border-0">
                                    <div class="card-title text-center">
                                        <img src=@Url.Content("~/Content/app-assets/images/logo/HajPlatFormLogo2.png") alt="branding logo" class="profile-image">
                                    </div>
                                    <br/>
                                    <h3 class="card-subtitle  text-muted text-center font-large-1 pt-1">
                                        <span>@HajHakathon.Resources.GbResoures.SystemName</span>
                                    </h3>
                                </div>
                                <div class="card-content">
                                    
                                    <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1">
                                        <span>@HajHakathon.Resources.GbResoures.LoginSystem</span>
                                    </p>
                                   <div class="card-body">
                                        @using (Html.BeginForm("Login", "LoginSystemAdmin", FormMethod.Post))
                                        {
                                            @Html.AntiForgeryToken()
                                            @Html.HiddenFor(m=>m.ReturnUrl)
                                        <fieldset class="form-group position-relative has-icon-left">
                                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = @"" + HajHakathon.Resources.GbResoures.LoginUserName + @""} })
                                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                            <div class="form-control-position">
                                                <i class="ft-user"></i>
                                            </div>
                                        </fieldset>
                                        <fieldset class="form-group position-relative has-icon-left">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @"" + HajHakathon.Resources.GbResoures.LoginPassword + @"" })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            
                                            <input type="hidden" class="form-control" name="LoginItem" placeholder=""   required>
                                            <div class="form-control-position">
                                                <i class="la la-key"></i>
                                            </div>
                                        </fieldset>
                                            <div class="form-group row">
                                                <button type="submit" class="btn btn-outline-info btn-block"><i class="ft-unlock"></i>@HajHakathon.Resources.GbResoures.Login</button>
                                             </div>
                                                <div class="form-group row">

                                                    <div class="col-md-12 col-12 float-sm-left text-center text-sm-center"><a href="recover-password.html" class="card-link">@HajHakathon.Resources.GbResoures.ForgetPassword</a></div>
                                                </div>

                                                <!---->
                                               
                                                    
                                                 <div class="form-group row">
